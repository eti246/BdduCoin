<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">

{% if tabProduit is empty %}
<h1>Aucun produit<h1>
{% else %}

{% for item in tabProduit %}

<button class="buttonProduit" onclick="document.getElementById('{{item.id}}').style.display='block'" >
  <img width='150' src="{{ asset('Comic/prod' ~ item.id ~ '.jpg')}}" onerror="this.src='{{asset('Comic/inf.png')}}';"  alt="Image not found"><br>
{{item.nomProduit}}
</button>

<button onclick="location.href='{{path('addProduit',{id:item.id} ) }}'" type="button">
  <img width = "45" src=" {{asset('Comic/panier.png')}}" onerror="this.src='{{asset('Comic/inf.png')}}' alt ='notFound'; "  alt="Image not found">
</button>

 <!--Fenetre Modal-->
        <div id="{{item.id}}" class="w3-modal">
    <div class="w3-modal-content">
